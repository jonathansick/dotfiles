#!/bin/bash
# From http://emptysquare.net/blog/syntax-highlighting-with-pycharm-pygments-and-keynote/
if [ $# == 1 ]; then
    env pygmentize -f rtf -O "style=monokai,fontface=Source Code Pro" "$1" | sed "s/\\\\f0/\\\\f0\\\\fs64/g" | pbcopy
else
    env pygmentize -gf rtf -O "style=monokai,fontface=Source Code Pro" | sed "s/\\\\f0/\\\\f0\\\\fs64/g" | pbcopy
fi
