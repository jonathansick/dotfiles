export MYNAME='Jonathan Sick'

# Fixes unicode issues when SSH'ing in
# See http://superuser.com/questions/267362/mac-terminal-doesnt-display-unicode-utf-8-properly-when-sshed-into-linux-and-r
export LANG="en_ca.UTF-8"

# Setup Conroy, Gunn & White's FSPS
export SPS_HOME=$HOME/bin/fsps

# Setup dolphot
export PATH=$HOME/bin/dolphot2.0/bin:$PATH

# Setup MacTex
export PATH=/usr/texbin:$PATH

# Homebrew and system installs
export PATH=/usr/local/Cellar/ruby/1.9.3-p327/bin:$PATH
export PATH=/usr/local/share/python:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/share/npm/bin:$PATH
